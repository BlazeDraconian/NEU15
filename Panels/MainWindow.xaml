<Window x:Class="Panels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panels"
        mc:Ignorable="d"
        d:Width="400" d:Height="400"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
          
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

      
        <StackPanel x:Name="stackpanel">
            <StackPanel.Children>
                <Button Content="1" HorizontalAlignment="Left" Width="20" Margin="10 10 0 0" Click="StackPanelButton_Click"/>
               
            </StackPanel.Children>
        </StackPanel>

        <WrapPanel x:Name="Wrappanel" Orientation="Vertical" Grid.Column="1">
            <WrapPanel.Children>

                <Button Content="1" HorizontalAlignment="Left" Width="20" Margin="10 10 0 0" Click="WrapPanelButton_Click"/>

            </WrapPanel.Children>
        </WrapPanel>

        <DockPanel x:Name="DockPanel" Grid.Column="0" Grid.Row="1">
            <Button Content="1" DockPanel.Dock="Top"/>
            <Button Content="2" DockPanel.Dock="Bottom"/>
            <Button Content="3" DockPanel.Dock="Left"/>
            <Button Content="4" DockPanel.Dock="Right"/>
            <Button Content="5"/>

        </DockPanel>

        <Canvas x:Name="Canvas" Grid.Column="1" Grid.Row="1">
        <Button Content="Hello" Canvas.Left="100" Canvas.Top="50"/>
        <Rectangle x:Name="redRectangle" 
            Width="50" 
            Height="80" 
                   Fill="Red" 
                   Stroke="Black" 
                   StrokeThickness="5" 
                   Canvas.Top="10"
            Canvas.Left="20">
            
        </Rectangle>
        <Ellipse x:Name="purpleEllipse"
            Width="40"
            Height="30"
            Fill="Purple"
            StrokeThickness="10"
            Canvas.Bottom="10"
            Canvas.Right="40">
            
        </Ellipse>

        </Canvas>


    </Grid>
</Window>
    
    
