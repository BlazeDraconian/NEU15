<Window x:Class="Data_Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Data_Binding"
        mc:Ignorable="d"
        d:Height="800" d:Width="400"
        
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    
    <StackPanel>
        <!--<StackPanel.DataContext>
            <local:Person FirstName="Michael" LastName="Winston" Age="46"/>
        </StackPanel.DataContext>-->
        <TextBox x:Name="TextboxA" Margin="10, 10, 0, 0" Text="{Binding Path=FirstName}"/>
        <TextBox x:Name="TextboxB" Margin="10, 10, 0, 0" Text="{Binding Path=LastName}" />
        <Button Content="Click me" Click="Button_Click" />
    </StackPanel>
        
</Window>
