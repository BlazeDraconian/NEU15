<Window x:Class="Dialogs_and_windows.AddUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialogs_and_windows"
        mc:Ignorable="d"
        FontSize="24"
        ResizeMode="NoResize"
        Title="Add New User" Height="250" Width="250">
    
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Margin="10,0" Content="First name"/>
            <TextBox Margin="10,0" x:Name="firstNameTextBox"/>
            <Label Margin ="10,0" Content="Last name"/>
            <TextBox Margin="10,0" x:Name="lastNameTextBox"/>

            <StackPanel Orientation="Horizontal">

                <Button Margin="10, 20"  Content="Cancel" Click="CancelButton_Click"/>
                <Button Margin="10, 20" Content="Add User" Click="AddUserButton_Click"/>

            </StackPanel>

        </StackPanel>
        
    </Grid>
</Window>
