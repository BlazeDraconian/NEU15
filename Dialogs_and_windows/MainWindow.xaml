<Window x:Class="Dialogs_and_windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialogs_and_windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <Button
                Content="Show MessageBox"
                Margin="10, 10, 10, 0"
                Click="Button_Click"
                />

            <Button
                x:Name="Add_Character_Button"
     Content="Add character"
     Margin="10, 10, 10, 0"
     Click="Add_Character_Button_Click"
     />

            <Button
                x:Name="Disable_Button"
    Content="Disable button"
    Margin="10, 10, 10, 0"
    Click="Disable_Button_Click"
    />

            <Button
            x:Name="OpenFileDialogButton"
Content="Open file"
Margin="10, 10, 10, 0"
Click="OpenFileDialogButton_Click"
/>

            <Button
            x:Name="SaveFileDialog"
Content="Save file"
Margin="10, 10, 10, 0"
Click="SaveFileDialog_Click"
/>
            <Button
            x:Name="AddUserDialogButton"
Content="Add User"
Margin="10, 10, 10, 0"
Click="AddUserDialogButton_Click"
/>
          

        </StackPanel>
      
            <ListBox Grid.Row="1" Margin="10" ItemsSource="{Binding Users}" DisplayMemberPath="FirstName"/>

        
    </Grid>
</Window>
